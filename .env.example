# Video Utility Suite Environment Configuration

# Server Configuration
PORT=9000
NODE_ENV=development

# File Upload Limits
MAX_FILE_SIZE=524288000  # 500MB in bytes
CLEANUP_INTERVAL=3600000 # 1 hour in milliseconds

# External API Keys (Optional - for enhanced features)

# OpenAI API Key (for advanced transcription with Whisper)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Translation API Key (for translation services)
# Get your API key from: https://cloud.google.com/translate/docs/setup
GOOGLE_TRANSLATE_API_KEY=your_google_api_key_here

# DeepL API Key (alternative translation service)
# Get your API key from: https://www.deepl.com/pro-api
DEEPL_API_KEY=your_deepl_api_key_here

# Directory Configuration
UPLOAD_DIR=uploads
DOWNLOAD_DIR=downloads
PROCESSED_DIR=processed
TEMP_DIR=temp

# FFmpeg Configuration
FFMPEG_PATH=ffmpeg  # Path to FFmpeg binary (leave as 'ffmpeg' if in PATH)
FFPROBE_PATH=ffprobe  # Path to FFprobe binary (leave as 'ffprobe' if in PATH)

# yt-dlp Configuration
YTDLP_PATH=yt-dlp  # Path to yt-dlp binary (leave as 'yt-dlp' if in PATH)

# Security Configuration
CORS_ORIGIN=http://localhost:3001  # Frontend URL for CORS
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100  # Maximum requests per window

# Logging Configuration
LOG_LEVEL=info  # Options: error, warn, info, debug
LOG_FILE=logs/server.log  # Log file path (optional)

# Database Configuration (for future use)
# DATABASE_URL=sqlite:./database.sqlite
# REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_TRANSCRIPTION=true
ENABLE_TRANSLATION=true
ENABLE_VIDEO_DOWNLOAD=true
ENABLE_AUDIO_EXTRACTION=true
ENABLE_VIDEO_MANIPULATION=true

# Performance Configuration
MAX_CONCURRENT_JOBS=5  # Maximum number of concurrent processing jobs
JOB_TIMEOUT=1800000  # 30 minutes in milliseconds
MEMORY_LIMIT=2048  # Memory limit in MB for processing

# Development Configuration
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=true  # Use mock responses for external APIs in development
